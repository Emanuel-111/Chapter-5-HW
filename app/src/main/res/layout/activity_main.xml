<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Display"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnEight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnNegativeOrPositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+/-"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="14sp"
        app:flow_firstHorizontalStyle="spread"
        app:flow_wrapMode="none" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btnNegativeOrPositive,btnAC,btnDivide,btnPercent" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:constraint_referenced_ids="btnAC,btnNegativeOrPositive,btnPercent,btnDivide"
        app:flow_horizontalStyle="spread"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Display" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:constraint_referenced_ids="btnSeven,btnEight,btnNine,btnMultiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow10" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:constraint_referenced_ids="btnFour,btnFive,btnSix,btnPlus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow11" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:constraint_referenced_ids="btnOne,btnTwo,btnThree,btnMinus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow12" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:constraint_referenced_ids="btnZero,btnDecimal,btnEquals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow13"
        app:layout_constraintVertical_bias="0.005" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="Display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>